#
# alacritty.toml (configuration file for alacritty) 
#

# General setting :
[general]
# importing theme:
import = [
	"~/.config/alacritty/default.toml"
]

# Window
[window]
# need for installing picom on i3 
# opacity = 0.8
# blur = true

## Scrolling

[scrolling]
# scrolling history
history = 10000
multiplier = 5

## Font 
[font] 
normal = {family = "AnonymicePro Nerd Font", style = "Regular"}
size = 12 

## Selection
[selection]
# copy selected text to the clipboard
save_to_clipboard = true


## Keyboard 
[keyboard]
# vi mode 
bindings= [
#+ paste
{ key = "p", mode = "vi", action = "paste"},
#+ the end of line
{ key = "$", mode = "vi", action = "last"},
#+ go to the begining of line
{ key = "0", mode = "vi", action = "firstOccupied"}
]

